<div id="expense-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h1><%= title %></h1>
      </div>
      <ul class="errors"></ul>
      <%= form_for @expense, remote: true do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.select(:category, Expense.categories.keys.map {|category| [category.titleize,category]},{}, class: "form-control") %>
          </div>
          <div class="form-group">
            <%= f.label :concept, "Concepto" %>
            <%= f.text_field :concept, class: "form-control", placeholder:"descripciÃ³n del gasto" %>
          </div>
          <div class="form-group">
            <%= f.label :amount, "Cantidad" %>
            <%= f.number_field :amount, class: "form-control col-sm-3", placeholder: "($) cantidad en pesos col" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit  button_text, class:"btn btn-primary center-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>